    application/json:
      type: <<put-collection-data-type>>
      example: <<put-collection-example>>
  is:
    - returns-401
    - returns-403
    - returns-500
    
  responses: 
    200:
      description: Resource updated.
      body:
        application/json:
          type: <<put-response-200-collection-data-type>>
          example: <<put-response-200-collection-example>>
    201:
      description: Resource Created.
      body:
        application/json:
          type: <<put-response-201-collection-data-type>>
          example: <<put-response-201-collection-example>>       
