			<ee:transform doc:name="Internal Server Error" doc:id="efd7341e-0a94-4c73-9c52-f4fe83817cb8" >
				<ee:message >
					<ee:set-payload ><![CDATA[%dw 2.0
output application/json
---
{
	errorCode: "500",
	errorMessage: error.description,
	transactionId: correlationId
}]]></ee:set-payload>		
				</ee:message>
				<ee:variables >
